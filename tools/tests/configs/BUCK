load("//tools/build_defs/oss/osquery:native.bzl", "osquery_filegroup")

osquery_filegroup(
    name = "conf_files",
    srcs = glob([
        "*.conf",
    ]),
    visibility = ["PUBLIC"],
)

osquery_filegroup(
    name = "config_files",
    srcs = glob([
        "*.config",
    ]),
    visibility = ["PUBLIC"],
)

osquery_filegroup(
    name = "plist_files",
    srcs = glob([
        "*.plist",
    ]),
    visibility = ["PUBLIC"],
)

osquery_filegroup(
    name = "test_files",
    srcs = glob([
        "*",
    ]),
    visibility = ["PUBLIC"],
)

osquery_filegroup(
    name = "aws_files",
    srcs = glob([
        "aws/*",
    ]),
    visibility = ["PUBLIC"],
)